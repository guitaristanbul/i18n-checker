<mvc:View controllerName="devepos.i18ncheck.controller.CheckResults"
	xmlns:form="sap.ui.layout.form"
	xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<semantic:FullscreenPage id="resultsPage"
		navButtonPress="onNavigate"
		title="{i18n>resultPageTitle}"
		busy="{viewModel>/busy}">
		<semantic:content>
			<Panel id="panel"
				class="sapUiNoContentPadding">
				<IconTabBar id="idIconTabBar"
					select="onFilterSelect"
					selectedKey="{viewModel>/selectedFilter}"
					class="sapUiNoContentPadding">
					<items>
						<IconTabFilter showAll="true"
							count="{/count}"
							text="UI5 Repositories"
							key="All" />
						<IconTabSeparator />
						<IconTabFilter icon="sap-icon://accept"
							iconColor="Positive"
							count="{/withoutErrorsCount}"
							text="Ok"
							key="Ok" />
						<IconTabFilter icon="sap-icon://error"
							iconColor="Negative"
							count="{/withErrorsCount}"
							text="Error"
							key="Error" />
					</items>
					<content>
						<Table id="checkResults"
							inset="false"
							showSeparators="Inner"
							headerText="Check Results"
							items="{
								path: '/results',
								sorter: {
									path: 'bspName'
								}
							}">
							<columns>
								<Column width="12em">
									<Text text="BSP Application" />
								</Column>
								<Column width="30em">
									<Text text="Description" />
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Navigation"
									press="onResultsPress">
									<cells>
										<ObjectIdentifier title="{bspName}"/>
										<Text text="{description}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</IconTabBar>
			</Panel>
		</semantic:content>
		<semantic:customFooterContent>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>
</mvc:View>